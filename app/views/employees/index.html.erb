<h1>Listing Employees</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>E-mail</th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.ID__c %></td>
    <td><%= employee.Name %></td>
    <td><%= employee.Email__c %></td>
    <td><%= link_to 'Show', 'employees/' + employee.Id %></td>
    <td><%= link_to 'Destroy', 'employees/' + employee.Id, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

